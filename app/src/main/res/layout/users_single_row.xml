<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/users_profileImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/blank_avatar" />

    <TextView
        android:id="@+id/users_DisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/users_profileImage"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/users_profileImage"
        android:text="Default Text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/users_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/users_DisplayName"
        android:layout_below="@+id/users_DisplayName"
        android:layout_marginTop="11dp"
        android:text="Hi this is the default Status"
        android:textStyle="italic" />

</RelativeLayout>