<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.aaswin.lapit.RegisterActivity">
    <include layout="@layout/app_bar_layout" android:id="@+id/signin_app_bar"/>


    <EditText
        android:id="@+id/Signin_input_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_app_bar"
        android:layout_marginStart="25dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="15dp"
        android:hint="@string/enter_your_email_id" />

    <EditText
        android:id="@+id/Signin_input_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_alignStart="@+id/Signin_input_email"
        android:layout_below="@+id/Signin_input_email"
        android:hint="@string/password_login" />

    <Button
        android:id="@+id/reg_SignInToAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Signin_input_password"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#D84315"
        android:padding="20dp"
        android:text="Sign In"
        android:textColor="#ffffff"/>

</RelativeLayout>
